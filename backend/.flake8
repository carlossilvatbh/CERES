[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long
    W503,  # line break before binary operator
    F401,  # imported but unused
    F841,  # local variable assigned but never used
exclude = 
    .git,
    __pycache__,
    migrations,
    venv,
    env,
    .venv,
    node_modules,
    .pytest_cache,
    htmlcov,
    coverage,
    dist,
    build
per-file-ignores =
    __init__.py:F401
    settings/*.py:F401,F403
    */migrations/*.py:F401,F403

